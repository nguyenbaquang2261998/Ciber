@using Ciber.Model
@model Order
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<div class="card">
    <div class="card-header">
        <strong>Create</strong> New Order
    </div>
    <div class="card-body card-block">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Customer</label>
                @Html.DropDownListFor(model => model.CustomerId, ViewBag.CustomerId as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Product</label>
                @Html.DropDownListFor(model => model.ProductId, ViewBag.ProductId as SelectList, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label">Order Date</label>
                <input asp-for="OrderDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Amount</label>
                <input asp-for="Amount" type="number" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <button type="submit" value="Create" class="btn btn-primary btn-sm mt-5">
                <i class="fas fa-subway"></i> Create Order
            </button>
        </form>
    </div>
</div>
