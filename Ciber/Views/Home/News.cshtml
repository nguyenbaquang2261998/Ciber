@model List<Ciber.Entity.News>
@{
    ViewData["Title"] = "Về chúng tôi";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner" style="background-image:url(/frontend/images/img_bg_1.jpg);">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                        <h1>Tin tức</h1>
                        <h2>Trang chủ/ Tin tức</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="fh5co-about">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="about-content">
                <div class="row animate-box">
                    <div class="col-md-6">
                        <div class="desc">
                            <h3><a href="/home/newsdetail/@item.Id">@item.Title</a></h3>
                            <p>@item.Description</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img class="img-responsive" src="~/upload/@item.Image" alt="about">
                    </div>
                </div>
            </div>
        }
    </div>
</div>
